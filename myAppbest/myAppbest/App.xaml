<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="myAppbest.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="buttonColor">#ffffff</Color>
            <Color x:Key="formColor">#f0f5f5</Color>
            <Color x:Key="buttonColor2">#2d8659</Color>
            <Style x:Key="normalButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource buttonColor2}"/>
                <Setter Property="TextColor" Value="{StaticResource buttonColor}"/>
                

            </Style>
        </ResourceDictionary>

    </Application.Resources>
</Application>